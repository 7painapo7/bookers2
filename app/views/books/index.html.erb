<h1>Books#index</h1>

<%= form_with model: @book do |f| %>
  <h2>New book</h2>

  <div class="field row">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field row">
    <label>Opinion</label>
    <%= f.text_area :body %>
  </div>

  <div class="row">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>



<h1>投稿一覧</h1>

<% @books.each do |book| %>

  <p>Title</p>
  <span><%= book.title %></span>

  <p>Opinion</p>
  <span><%= book.body %></span>

<% end %>
