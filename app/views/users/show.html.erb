<div class="container">

<!-- ここに追加 -->
<%= render 'users/template', user: @user, book: @book %>

<div class='col-xs-9'>
<h2>Books</h2>

<table class='table table-hover table-inverse'>

  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= image_tag @user.get_profile_image(100,100) %></td>
      <td>
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </td>

      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<footer>
  <div class='container'>
    <div class='row'>
      <div class='col-xs-3 col-xs-offset-9'>
