<p>Users#edit</p>

<div class='container'>
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">


    <h2>User info</h2>
    <% if @user.errors.any? %>
      <h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
      <% @user.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    <%end %>

    <%= form_for(@user) do |f| %>
      <label>Name</label>
      <div class="field">
        <%= f.text_field :name, autofocus: true, placeholder:"名前"%>
      </br>

      <label>Image</label>
      <div class="field">
        <%= f.file_field :profile_image %>
      </div>
      </br>

      <label>Introduction</label>
      <div class="field">
        <%= f.text_field :introduction, autofocus: true %>
      </div>
      </br>

      <%= f.submit "Update User", class: "btn btn-secondary" %>
    <% end %>
    </div>
  <footer>
    <div class='container mt-5'>
      <div class='row'>
        <div class='mx-auto'>
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </div>

