<h1>Users#edit</h1>
<p>Find me in app/views/users/edit.html.erb</p>
<h1>User info</h1>

<%= form_with model: @user do |f| %>

  <h4>名前</h4>
  <%= f.text_field :name %>

  <!-- 追加部分 -->
  <h4>画像</h4>
  <%= f.file_field :profile_image %>

  <h4>自己紹介</h4>
  <%= f.text_area :introduction %>

  <%= f.submit '投稿' %>

<% end %>