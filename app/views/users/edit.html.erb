<h2>User info</h2>

<% if @user.errors.any? %>
<h2><%= @user.errors.count %>errors prohibited this book from being saved:</h2>
<% @user.errors.full_messages.each do |message| %>
        <%= message %>
<% end %>
<% end %>
<%= form_for(@user) do |f| %>
<label>Name</label>
<%= f.text_field :name, autofocus: true, placeholder:"名前"%>
</br>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg"%>
</br>
<label>ProfileImage</label>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
</br>
<label>Introduction</label>
<%= f.text_field :introduction, autofocus: true %>
</br>
<%= f.submit "Update User" %>
<% end %>